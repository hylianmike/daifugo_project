<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" style="-fx-background-color: black;" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.daifugo.EndController">
   <children>
      <ImageView fitHeight="810.0" fitWidth="1010.0" opacity="0.5" pickOnBounds="true">
         <image>
            <Image url="@table.jpg" />
         </image>
      </ImageView>
      <BorderPane prefHeight="800.0" prefWidth="1000.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <bottom>
            <HBox alignment="CENTER" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="50.0" />
               </BorderPane.margin>
               <children>
                  <Button fx:id="mainMenuButton" mnemonicParsing="false" onAction="#mainMenu" text="Main Menu">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin></Button>
                  <Button fx:id="playAgainButton" mnemonicParsing="false" onAction="#playAgain" text="Play Again">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin></Button>
               </children>
            </HBox>
         </bottom>
         <left>
            <VBox alignment="CENTER" prefHeight="701.0" prefWidth="500.0" BorderPane.alignment="CENTER">
               <children>
                  <Label style="-fx-text-fill: white;" text="Rankings:">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font name="Broadway" size="28.0" />
                     </font></Label>
                   <Label fx:id="rankOneLabel" text="#1: Player One" textFill="#ffd400">
                       <VBox.margin>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                       </VBox.margin>
                       <font>
                           <Font name="Broadway" size="28.0" />
                       </font></Label>
                   <Label fx:id="rankTwoLabel" text="#2: Player Three" textFill="#c3c3c3">
                       <VBox.margin>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                       </VBox.margin>
                       <font>
                           <Font name="Broadway" size="28.0" />
                       </font></Label>
                   <Label fx:id="rankThreeLabel" text="#3: Player Four" textFill="#d79d00">
                       <VBox.margin>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                       </VBox.margin>
                       <font>
                           <Font name="Broadway" size="28.0" />
                       </font></Label>
                   <Label fx:id="rankFourLabel" text="#4: Player Two" textFill="RED">
                       <VBox.margin>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                       </VBox.margin>
                       <font>
                           <Font name="Broadway" size="28.0" />
                       </font></Label>
               </children>
            </VBox>
         </left>
         <right>
            <VBox alignment="CENTER" BorderPane.alignment="CENTER">
               <children>
                  <Label style="-fx-text-fill: white;" text="Play Of The Game">
                     <font>
                        <Font name="Broadway" size="28.0" />
                     </font>
                  </Label>
                  <TilePane fx:id="cardTilePane" alignment="CENTER" hgap="10.0" prefHeight="227.0" prefWidth="488.0" vgap="10.0" />
                  <Label fx:id="playOfTheGamePlayer" style="-fx-text-fill: white;" text="By: ">
                     <font>
                        <Font name="Broadway" size="28.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </right>
         <top>
            <HBox alignment="CENTER" BorderPane.alignment="CENTER">
               <children>
                  <Label style="-fx-text-fill: white;" text="Thats The Game!!!">
                     <font>
                        <Font name="Broadway" size="56.0" />
                     </font>
                     <HBox.margin>
                        <Insets top="20.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
